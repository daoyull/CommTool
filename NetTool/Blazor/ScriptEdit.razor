@using Microsoft.JSInterop
@using NetTool.ViewModels
@inject IJSRuntime JS
@inject ScriptViewModel ViewModel
<body>
    <StandaloneCodeEditor ConstructionOptions="EditorConstructionOptions" Id="my-editor-instance-id"/>
</body>

<style>
       
    #my-editor-instance-id {
    	height: 95vh;
    }
   
</style>


@code {


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("registerTip");
            await ViewModel.Save("");
        }
    }


    private StandaloneEditorConstructionOptions EditorConstructionOptions(StandaloneCodeEditor editor)
    {
        return new StandaloneEditorConstructionOptions
        {
            AutomaticLayout = true,
            Theme = "vs-dark",
            Language = "javascript",
            Value = "function receive() {\n" +
                    "    \n" +
                    "}",
        };
    }


}