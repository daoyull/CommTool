<UserControl x:Class="NetTool.Components.InputComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NetTool.Components"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Height="30" Width="100" BorderThickness="1" CornerRadius="4" BorderBrush="Gainsboro">
            <Grid>
                <ComboBox IsEditable="True" VerticalAlignment="Center" x:Name="ComboBox" Margin="0 0 5 0"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>